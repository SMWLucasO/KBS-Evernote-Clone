<Window x:Class="EvernoteCloneGUI.Views.NoteFeverView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EvernoteCloneGUI.Views"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:cal="http://www.caliburnproject.org"
        mc:Ignorable="d"
        Title="NoteFever" Height="600" Width="1280">
    <Window.Resources><!-- TODO remove! (context menus) -->
        <ContextMenu x:Key ="FolderContext"  StaysOpen="true">
            <MenuItem Header="Add Folder" cal:Message.Attach="[Event Click] = [AddFolder($eventArgs)]"/>
            <MenuItem Header="Add Notebook" cal:Message.Attach="[Event Click] = [AddNotebook($eventArgs)]"/>
        </ContextMenu>
        <ContextMenu x:Key="NotebookContext"  StaysOpen="true">
            <MenuItem Header="Add Note" cal:Message.Attach="[Event Click] = [AddNote($eventArgs)]"/>
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>


        </Grid.RowDefinitions>

        <Button Content="Username" Background="#404040" Foreground="White" FontSize="16" Grid.Row="0"></Button>
        <Button Content="New Note" Background="#0052cc" Foreground="White" FontSize="16" Grid.Row="1" x:Name="NewNote"></Button>
        <Button Content="All Notes" Background="#404040" Foreground="White" FontSize="16" Grid.Row="2"></Button>
        <TreeView x:Name="NotebooksTreeView" Background="#404040" Foreground="White" Grid.Row="3" ItemsSource="{Binding Path=NotebooksTreeView}"></TreeView>
        <Button Content="Shared With Me" Background="#404040" Foreground="White" FontSize="16" Grid.Row="4"></Button>
        <Button Content="Bin" Background="#404040" Foreground="White" FontSize="16" Grid.Row="5"></Button>
        <Button Content="Tags" Background="#404040" Foreground="White" FontSize="16" Grid.Row="6"></Button>
        <Button Content="Search" Background="#404040" Foreground="White" FontSize="16" Grid.Row="7"></Button>

        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="8">
            <!-- This doesn't currently properly load in the notebooks, but it is an example. -->
            <local:NotebookView HorizontalAlignment="Stretch" Height="100"></local:NotebookView>
            <!-- Add all notebooks in here... (Perhaps load a 'usercontrol')-->
        </StackPanel>

        <ContentControl Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3"
                        Grid.RowSpan="8" x:Name="ActiveItem"></ContentControl>

    </Grid>

</Window>
